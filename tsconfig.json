{
    "compilerOptions": {
        "allowJs": true,
        "target": "es2017",
        "alwaysStrict": true,
        "sourceMap": true,
        "jsx": "react",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["dom", "esnext"],
        "strict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "module": "esnext",
        "noUnusedLocals": true,
        "noEmit": false
    },
    "include": ["packages"]
}
