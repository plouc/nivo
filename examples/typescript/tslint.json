{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "semicolon": [true, "never"],
    "quotemark": [true, "single", "jsx-double"],
    "interface-name": false,
    "no-console": false,
    "jsx-no-lambda": false
  }
}
