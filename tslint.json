{
    "extends": ["tslint:latest"],
    "rules": {
        "semicolon": [true, "never"],
        "quotemark": [true, "single", "jsx-double"],
        "ordered-imports": false,
        "max-classes-per-file": false,
        "interface-name": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    }
}
